# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
HOST=127.0.0.1
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///nids.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Security
SECRET_KEY=your-secret-key-change-this-in-production

# NIDS Configuration
ML_MODEL_PATH=data/ml_models/
PCAP_STORAGE_PATH=data/pcap/
LOG_LEVEL=INFO
INTERFACE=Wi-Fi  # Network interface to monitor (change according to your system)

# Monitoring Settings
MAX_CONNECTIONS=1000        # Maximum number of tracked connections
CLEANUP_INTERVAL=300       # Connection cleanup interval in seconds
ALERT_THRESHOLD=0.8       # Risk score threshold for alerts
